<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="gankio"
            type="me.henry.versatile.model.gank.GankData" />
        <variable
            name="presenter"
            type="me.henry.versatile.framework.demo.MyPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_test_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{gankio.desc}" />

        <TextView
            android:id="@+id/tv_test_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{presenter.haha}"
            android:onClick="@{presenter.showTost}"
            />
    </LinearLayout>
</layout>

